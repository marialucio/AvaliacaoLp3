@model List<AvaliacaoLp3.ViewModels.EstabelecimentoViewModel>

    @{
        ViewData["Title"] = "Lojas e Quiosques";
    }
    
    <h1>Gerenciamento</h1>
    
    @if(Model.Count == 0)
    {
        <p>Não há nenhuma loja ou quiosque</p>
    }
    else
    {
        <hr>
        @foreach(var estabelecimento in Model)
        {
            <h3>@estabelecimento.Nome</h3>
            <a href="Detalhes/@estabelecimento.Id">Detalhes</a>
            <span>&nbsp;&nbsp;</span>
            <a href="Excluir/@estabelecimento.Id">Excluir</a>
            <hr>
        }
    }